<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myview" 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    android:visibility="invisible"
	    android:id="@+id/slashScreen" >
	
	</RelativeLayout>
	
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
		android:visibility="invisible"
	    android:id="@+id/mainMenu" >

        <ImageView
            android:id="@+id/fb_fanpage_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_fb_like_btn" />

        <ImageView
            android:id="@+id/trophy_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:src="@drawable/ic_trophy_btn" />

        <ImageView
            android:id="@+id/ic_play_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/trophy_btn"
            android:layout_toLeftOf="@+id/trophy_btn"
            android:src="@drawable/ic_play_btn" />
	
	</RelativeLayout>
    
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
		android:visibility="invisible"
	    android:id="@+id/sub_menu" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ic_continue_btn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:padding="16dp"
            android:orientation="vertical" >
	
	        <ScrollView
	            android:id="@+id/scrollList"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" >
	
	            <LinearLayout
	                android:id="@+id/level_list"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:orientation="vertical" >
	            </LinearLayout>
	        </ScrollView>
	    </LinearLayout>
        
        <ImageView
            android:id="@+id/ic_continue_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_continue_btn" />
	
	</RelativeLayout>
	
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
		android:visibility="invisible"
	    android:id="@+id/leaderBoard" >

        <LinearLayout
            android:id="@+id/boardPlate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ic_gomenu"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="16dp"
            android:orientation="vertical" >
	
	        <ScrollView
	            android:id="@+id/leaderBoardList"
	            android:layout_width="fill_parent"
	            android:paddingTop="35dp"
           		android:paddingBottom="30dp"
           		android:paddingLeft="5dp"
           		android:paddingRight="5dp"
	            android:layout_height="wrap_content" >
	
	            <LinearLayout
	                android:id="@+id/scores_list"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="vertical" >
	            </LinearLayout>
	        </ScrollView>
	    </LinearLayout>
        
        <ImageView
            android:id="@+id/ic_gomenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_gomenu" />
        
        <ImageView
            android:id="@+id/ic_navi_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_navi_left" />
        
        <ImageView
            android:id="@+id/ic_navi_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/ic_navi_left"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_navi_right" />
	
	</RelativeLayout>
    
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"

	    android:id="@+id/gameStage" >

        <LinearLayout
            android:id="@+id/gameObjects"
            android:layout_width="wrap_content"
            android:layout_height="186dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/keypadBg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp" >
	        
        </LinearLayout>    
        
        <TextView
            android:id="@+id/stageLevelShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:text="Lvl 1"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <TextView
            android:id="@+id/stageTimeShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:text="Time"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <ImageView
            android:id="@+id/ic_trophy_game_stage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/stageTimeShow"
            android:layout_toLeftOf="@+id/stageTimeShow"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_trophy_game_stage" />
        
        <TextView
            android:id="@+id/ic_trophy_game_scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/stageTimeShow"
            android:layout_toLeftOf="@+id/ic_trophy_game_stage"
            android:padding="2dp"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <ImageView
            android:id="@+id/ic_time_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/stageTimeShow"
            android:scaleType="fitXY"
            android:src="@drawable/ic_time_bar" />
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/stageTimeShow"
            android:scaleType="fitXY"
            android:src="@drawable/ic_time_bar_cover" />
        
        <ImageView
            android:id="@+id/ic_mybomb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/keypadBg"
            android:src="@drawable/ic_mybomb" />
        
        <TextView
            android:id="@+id/ic_mybomb_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/keypadBg"
            android:layout_toRightOf="@+id/ic_mybomb"
            android:layout_marginLeft="-10dp"
            android:padding="2dp"
            android:text="x0"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:id="@+id/keypadBg"
            android:layout_width="wrap_content"
            android:layout_height="186dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="5dp" >
	
            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_inputed_bg"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="3dp" >
            
                <TextView
                    android:id="@+id/keyPadInputed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical|center_horizontal|center"
                    android:padding="0dp"
                    android:text="*type the word*" />
                
            </LinearLayout>    
                
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="3dp" >
		
                <ImageView
                android:id="@+id/ic_key_q"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_w" />
                <ImageView
                android:id="@+id/ic_key_w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_q" />
                <ImageView
                android:id="@+id/ic_key_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_e" />
                <ImageView
                android:id="@+id/ic_key_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_r" />
                <ImageView
                android:id="@+id/ic_key_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_t" />
                <ImageView
                android:id="@+id/ic_key_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_y" />
                <ImageView
                android:id="@+id/ic_key_u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_u" />
                <ImageView
                android:id="@+id/ic_key_i"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_i" />
                <ImageView
                android:id="@+id/ic_key_o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_o" />
                <ImageView
                android:id="@+id/ic_key_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_p" />
		        
		    </LinearLayout>
		    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="3dp" >
		        
                <ImageView
                android:id="@+id/ic_key_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_a" />
                <ImageView
                android:id="@+id/ic_key_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_s" />
                <ImageView
                android:id="@+id/ic_key_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_d" />
                <ImageView
                android:id="@+id/ic_key_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_f" />
                <ImageView
                android:id="@+id/ic_key_g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_g" />
                <ImageView
                android:id="@+id/ic_key_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_h" />
                <ImageView
                android:id="@+id/ic_key_j"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_j" />
                <ImageView
                android:id="@+id/ic_key_k"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_k" />
                <ImageView
                android:id="@+id/ic_key_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_l" />
                
		    </LinearLayout>
		    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="3dp" >
		        
                <ImageView
                android:id="@+id/ic_key_clr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_clr" />
                <ImageView
                android:id="@+id/ic_key_z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_z" />
                <ImageView
                android:id="@+id/ic_key_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_x" />
                <ImageView
                android:id="@+id/ic_key_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_c" />
                <ImageView
                android:id="@+id/ic_key_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_v" />
                <ImageView
                android:id="@+id/ic_key_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_b" />
                <ImageView
                android:id="@+id/ic_key_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_n" />
                <ImageView
                android:id="@+id/ic_key_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_m" />
                <ImageView
                android:id="@+id/ic_key_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/ic_key_del" />
                
		    </LinearLayout>
            
	        
	    </LinearLayout>
	
	</RelativeLayout>
    
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
		android:visibility="invisible"
	    android:id="@+id/popbox" >

        <LinearLayout
            android:id="@+id/popboxCenter"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:gravity="center"
            android:visibility="invisible"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/popboxMSG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal" />

            <ImageView
                android:id="@+id/popboxOK_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_ok_btn" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/popboxResult"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:gravity="center"
            android:visibility="invisible"
            android:orientation="vertical" >

            <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:orientation="horizontal" >
                
                <RelativeLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" >
	                <TextView
		                android:id="@+id/popboxResultLvl2"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:ems="10"
		                android:layout_marginTop="4dp"
		                android:layout_marginLeft="4dp"
		                android:text="Level 2"
		                android:gravity="center_vertical|center_horizontal" />
	                <TextView
		                android:id="@+id/popboxResultLvl"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:ems="10"
		                android:text="Level 2"
		                android:gravity="center_vertical|center_horizontal" />
	            </RelativeLayout>    
                
                <!-- <ImageView
	                android:id="@+id/ic_little_egg"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/ic_little_egg" /> -->
	                
	        </LinearLayout>
	        
            <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:orientation="horizontal" >
                
                <RelativeLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" >
	                
					<ImageView
		                android:id="@+id/ic_popbox_egg"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_centerHorizontal="true"
            			android:layout_centerVertical="true"
		                android:src="@drawable/ic_popbox_egg" />
                    
					<RelativeLayout
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_centerHorizontal="true"
	            		android:layout_centerVertical="true" >
						
		                <TextView
			                android:id="@+id/popboxResultPts2"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
	            			android:layout_marginTop="6dp"
			                android:ems="10"
			                android:text="3000\npoints"
			                android:gravity="center_vertical|center_horizontal" />
		                
		                <TextView
			                android:id="@+id/popboxResultPts"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:ems="10"
			                android:text="3000\npoints"
			                android:gravity="center_vertical|center_horizontal" />
		                
		                <EditText
				            android:id="@+id/mynickName"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_centerHorizontal="true"
				            android:layout_marginTop="20dp"
				            android:ems="5"
				            android:hint="type your name"
				            android:textColor="#333333"
				            android:textColorHint="#ccc"
				            android:background="#fff"
				            android:gravity="center"
				            android:maxLength="15"
				            android:maxLines="3"
				            android:textSize="20dp" />
	                
	                </RelativeLayout>   
	                
	            </RelativeLayout>    

	        </LinearLayout>
	        
            <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:layout_marginTop="10dp"
	            android:orientation="horizontal" >
                
                <ImageView
		                android:id="@+id/ic_fb_share"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_marginRight="10dp"
		                android:src="@drawable/ic_fb_share" />
                
                <ImageView
		                android:id="@+id/ic_submit_button"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:src="@drawable/ic_submit_button" />
                
            </LinearLayout>    
            
        </LinearLayout>
        
        <ImageView
                android:id="@+id/popbox_trophy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_alignLeft="@+id/popboxResult"
				android:layout_alignTop="@+id/popboxResult"
                android:visibility="invisible"
            	android:layout_marginTop="-60dp"
                android:src="@drawable/ic_trophy_btn" />
        
        <ImageView
                android:id="@+id/ic_popbox_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_alignRight="@+id/popboxResult"
				android:layout_alignTop="@+id/popboxResult"
                android:visibility="invisible"
            	android:layout_marginTop="-20dp"
                android:src="@drawable/ic_popbox_close" />
        
	</RelativeLayout>
    
</RelativeLayout>